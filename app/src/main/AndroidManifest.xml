        android:label="@string/app_name"
        android:roundIcon="@drawable/regologo"
        android:supportsRtl="true"
        android:theme="@style/Theme.RegoDigital"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".Candidate.CandidateDoc"
