            android:name=".officeexpenses.ExpenseRecptActivity"
            android:exported="false" />
        <activity
            android:name=".officeexpenses.ExpensesDashboardActivity"
            android:exported="false" />
        <activity
            android:name=".candidateFee.CandidateFeeReceiptActivity"
            android:exported="false" />
