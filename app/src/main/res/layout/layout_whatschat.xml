<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.2"
            />
        <LinearLayout
            android:id="@+id/linSent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:background="#6BAFAFAF">
            <ImageView
                android:visibility="gone"
                android:id="@+id/imgSent"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/gmail"/>

            <TextView
                android:id="@+id/txtSentMsg"
                android:visibility="gone"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here Sent Message Form the User to the Client "
                android:textColor="@color/black"
                android:textSize="16sp"
                />


        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        >

        <LinearLayout
            android:id="@+id/linReceive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:background="#6BAFAFAF">
            <ImageView
                android:visibility="gone"
                android:id="@+id/imgReceive"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/gmail"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/txtReceiveMsg"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here Sent Message Form the User to the Client "
                android:textColor="@color/black"
                android:textSize="16sp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.2"
            />




    </LinearLayout>



</LinearLayout>